@{
    // Lấy đường dẫn Razor Page hiện tại, ví dụ: "/Models/Index"
    var currentPage = (ViewContext.RouteData.Values["page"]?.ToString() ?? "").ToLower();
    Func<string, string> activeWhenStartsWith = (prefix) =>
        currentPage.StartsWith(prefix.ToLower()) ? "active" : "";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "Dashboard") - Quản lý bán xe điện</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        /* ===== Base Reset ===== */
        html, body {
            height: 100%;
            margin: 0;
            font-family: "Segoe UI", Roboto, sans-serif;
            background-color: #f9fafb;
        }

        body {
            display: flex;
            min-height: 100vh;
            overflow: hidden;
        }

        /* ===== Sidebar ===== */
        .sidebar {
            width: 240px;
            background-color: #1e293b;
            color: #e2e8f0;
            display: flex;
            flex-direction: column;
            padding: 20px 0;
            flex-shrink: 0;
        }

            .sidebar h2 {
                font-size: 18px;
                text-align: center;
                margin-bottom: 20px;
                color: #f8fafc;
            }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar-menu li {
                margin: 4px 0;
            }

        .sidebar-link {
            display: block;
            padding: 10px 18px;
            color: #cbd5e1;
            text-decoration: none;
            font-size: 15px;
            border-left: 3px solid transparent;
            transition: all 0.2s;
        }

            .sidebar-link:hover {
                background-color: #334155;
                color: #fff;
                border-left: 3px solid #38bdf8;
            }

            .sidebar-link.active {
                background-color: #0f172a;
                color: #fff;
                border-left: 3px solid #38bdf8;
            }

        /* ===== Main Content ===== */
        .content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            background: #f9fafb;
        }

        .header {
            background: #ffffff;
            border-bottom: 1px solid #e5e7eb;
            padding: 12px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .header h4 {
                font-size: 18px;
                margin: 0;
                color: #1e293b;
            }

            .header .user {
                font-size: 14px;
                color: #475569;
            }

                .header .user a {
                    text-decoration: none;
                    color: #ef4444;
                }

        .main {
            flex-grow: 1;
            padding: 24px;
            overflow-y: auto;
        }

        footer {
            background: #fff;
            border-top: 1px solid #e5e7eb;
            text-align: center;
            padding: 10px;
            font-size: 13px;
            color: #64748b;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2><i class="fa-solid fa-bolt me-2"></i>EV Dealer</h2>
        <ul class="sidebar-menu">
            <!-- Trang chủ -->
            <li>
                <a class="sidebar-link @(activeWhenStartsWith("/index"))"
                   asp-page="/Index">🏠 Trang chủ</a>
            </li>

            <!-- Quản lý Model (entity Model) -->
            <li>
                <a class="sidebar-link @(currentPage.StartsWith("/catalog") ? "active" : "")"
                   asp-page="/Catalog/Index">📚 Catalog</a>
            </li>

            <!-- Gợi ý các khu khác (chưa làm thì để # hoặc trỏ đúng page khi có) -->
            <li>
                <a class="sidebar-link"
                   asp-page="/Orders/Index">📝 Đơn hàng</a>
            </li>
            <li>
                <a class="sidebar-link"
                   asp-page="/Appointments/Index">📅 Lịch hẹn</a>
            </li>
            <li>
                <a class="sidebar-link"
                   asp-page="/Customers/Index">👤 Khách hàng</a>
            </li>
        </ul>
    </div>

    <!-- Content -->
    <div class="content">
        <div class="header">
            <h4>@(ViewData["Title"] ?? "Dashboard")</h4>
            <div class="user">
                Xin chào, <strong>Admin</strong> |
                <a asp-page="/Logout">Đăng xuất</a>
            </div>
        </div>

        <div class="main">
            <!-- Flash message -->
            @if (TempData["Msg"] is string msg)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @msg
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </div>

        <footer>
            &copy; @DateTime.Now.Year - Quản lý bán xe điện qua đại lý
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @* Nếu bạn muốn dùng SignalR chung cho nhiều trang, có thể thêm script nền ở đây *@
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script> *@

    @RenderSection("Scripts", required: false)
</body>
</html>

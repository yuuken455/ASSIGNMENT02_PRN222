@page "{id:int}"
@model EVDManagement.Pages.Appointments.EditModel
@{
    ViewData["Title"] = "Sửa lịch hẹn";
}

<h2 class="mb-4">Sửa lịch hẹn</h2>

<form method="post" class="row g-3">
    <div asp-validation-summary="All" class="text-danger mb-2"></div>
    <input type="hidden" asp-for="Item.AppointmentId" />

    <div class="col-md-4">
        <label class="form-label">Khách hàng</label>
        <select asp-for="Item.CustomerId" class="form-select" required>
            @foreach (var c in Model.Customers)
            {
                var phoneText = string.IsNullOrWhiteSpace(c.Phone) ? "" : $" ({c.Phone})";
                <option value="@c.CustomerId">@c.FullName@phoneText</option>
            }
        </select>
        <span asp-validation-for="Item.CustomerId" class="text-danger"></span>
    </div>

    <div class="col-md-8">
        <label class="form-label">Chọn xe trong kho (Inventory)</label>
        <select asp-for="SelectedInventoryId" id="InventorySelect" class="form-select" required>
            <option value="">-- Chọn xe --</option>
            @{
                var grouped = Model.Inventories.GroupBy(x => new { x.ModelId, x.ModelName })
                .OrderBy(g => g.Key.ModelName);
                foreach (var g in grouped)
                {
                    <optgroup label="@g.Key.ModelName">
                        @foreach (var inv in g)
                        {
                            <option value="@inv.InventoryId"
                                    data-version="@inv.VersionId"
                                    data-color="@inv.ColorId">
                                @inv.Display
                            </option>
                        }
                    </optgroup>
                }
            }
        </select>
        <div class="form-text">Ví dụ: VF8 • Eco Plus • Đỏ (x3)</div>
    </div>

    <!-- Hidden fields bind vào DTO -->
    <input type="hidden" asp-for="Item.CarVersionId" />
    <input type="hidden" asp-for="Item.ColorId" />

    <div class="col-md-4">
        <label class="form-label">Thời gian lái thử</label>
        <input asp-for="Item.DateTime" type="datetime-local" class="form-control" required />
        <span asp-validation-for="Item.DateTime" class="text-danger"></span>
        <small class="text-muted">* Khung giờ hợp lệ: 08:00 – 17:30, mỗi lượt 60 phút.</small>
    </div>

    <div class="col-md-4">
        <label class="form-label">Trạng thái</label>
        <select asp-for="Item.Status" class="form-select">
            <option value="Pending">Pending</option>
            <option value="Scheduled">Scheduled</option>
            <option value="Completed">Completed</option>
            <option value="Cancelled">Cancelled</option>
        </select>
    </div>

    <div class="col-md-12">
        <label class="form-label">Phản hồi</label>
        <textarea asp-for="Item.Feedback" rows="3" class="form-control"></textarea>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-page="/Appointments/Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const invSelect = document.getElementById('InventorySelect');
        const inputVersion = document.getElementById('Item_CarVersionId');
        const inputColor = document.getElementById('Item_ColorId');

        // Khi chọn inventory, set VersionId + ColorId vào hidden
        invSelect.addEventListener('change', () => {
            const opt = invSelect.selectedOptions[0];
            if (!opt) {
                inputVersion.value = '';
                inputColor.value = '';
                return;
            }
            inputVersion.value = opt.getAttribute('data-version') || '';
            inputColor.value = opt.getAttribute('data-color') || '';
        });

        // Khởi tạo: nếu Item có sẵn Version/Color, chọn option phù hợp
        (function init() {
            const v = inputVersion.value;
            const c = inputColor.value;
            if (v && c) {
                const target = [...invSelect.options].find(o =>
                    o.getAttribute('data-version') === v && o.getAttribute('data-color') === c
                );
                if (target) invSelect.value = target.value;
            }
        })();
    </script>
}

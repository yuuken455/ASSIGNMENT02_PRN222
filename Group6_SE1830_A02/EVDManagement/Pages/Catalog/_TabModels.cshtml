@model EVDManagement.Pages.Catalog.IndexModel

<div class="row g-3">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">Create Model</div>
            <div class="card-body">
                <form method="post" asp-page-handler="CreateModel">
                    <div class="mb-2">
                        <label asp-for="NewModel.ModelName" class="form-label"></label>
                        <input asp-for="NewModel.ModelName" class="form-control" />
                        <span class="text-danger" asp-validation-for="NewModel.ModelName"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="NewModel.Segment" class="form-label"></label>
                        <input asp-for="NewModel.Segment" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label asp-for="NewModel.Description" class="form-label"></label>
                        <textarea asp-for="NewModel.Description" class="form-control" rows="3"></textarea>
                    </div>
                    <button class="btn btn-primary" type="submit">Create</button>
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">Edit Model</div>
            <div class="card-body">
                <form method="post" asp-page-handler="UpdateModel">
                    <input asp-for="EditModel.ModelId" type="hidden" />
                    <div class="mb-2">
                        <label asp-for="EditModel.ModelName" class="form-label"></label>
                        <input asp-for="EditModel.ModelName" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label asp-for="EditModel.Segment" class="form-label"></label>
                        <input asp-for="EditModel.Segment" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label asp-for="EditModel.Description" class="form-label"></label>
                        <textarea asp-for="EditModel.Description" class="form-control" rows="3"></textarea>
                    </div>
                    <button class="btn btn-success" type="submit">Update</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">Model List</div>
            <div class="card-body table-responsive">
                <table class="table table-striped align-middle">
                    <thead><tr><th>ID</th><th>Name</th><th>Segment</th><th class="text-end">Actions</th></tr></thead>
                    <tbody>
                        @foreach (var m in Model.Models)
                        {
                            <tr>
                                <td>@m.ModelId</td>
                                <td>@m.ModelName</td>
                                <td>@m.Segment</td>
                                <td class="text-end">
                                    <form method="post" asp-page-handler="LoadModel" class="d-inline">
                                        <input type="hidden" name="id" value="@m.ModelId" />
                                        <button class="btn btn-sm btn-secondary">Load</button>
                                    </form>
                                    <form method="post" asp-page-handler="DeleteModel" class="d-inline" onsubmit="return confirm('Delete this model?');">
                                        <input type="hidden" name="id" value="@m.ModelId" />
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

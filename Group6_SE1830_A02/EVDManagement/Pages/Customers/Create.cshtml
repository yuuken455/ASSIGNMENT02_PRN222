@page
@model EVDManagement.Pages.Customers.CreateModel
@{
    ViewData["Title"] = "Thêm khách hàng";
}

<h2 class="mt-3 mb-4 text-success fw-bold">Thêm khách hàng mới</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div id="success-alert"
         class="alert alert-success py-2 px-3 mb-3 shadow-sm border-start border-4 border-success fade show"
         style="font-size: 14px; line-height: 1.5; transition: opacity 0.5s;">
        <i class="fa fa-check-circle me-2"></i>@TempData["SuccessMessage"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger py-2 px-3" style="white-space: pre-line; font-size: 14px; line-height: 1.5;">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

<div class="card shadow-sm p-4">
    <form method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Customer.FullName" class="form-label">Họ và tên</label>
                <input asp-for="Customer.FullName" class="form-control" />
                <span asp-validation-for="Customer.FullName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Customer.Phone" class="form-label">Số điện thoại</label>
                <input asp-for="Customer.Phone" class="form-control" />
                <span asp-validation-for="Customer.Phone" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Customer.Email" class="form-label">Email</label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Customer.Idnumber" class="form-label">CCCD/CMND</label>
                <input asp-for="Customer.Idnumber" class="form-control" />
                <span asp-validation-for="Customer.Idnumber" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Customer.Dob" class="form-label">Ngày sinh</label>
                <input asp-for="Customer.Dob" type="date" class="form-control" />
                <span asp-validation-for="Customer.Dob" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Customer.Address" class="form-label">Địa chỉ</label>
                <input asp-for="Customer.Address" class="form-control" />
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Customer.Note" class="form-label">Ghi chú</label>
            <textarea asp-for="Customer.Note" class="form-control" rows="3"></textarea>
        </div>

        <div class="text-end">
            <a asp-page="Index" class="btn btn-secondary me-2">
                <i class="fa fa-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fa fa-save"></i> Lưu khách hàng
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Ẩn mượt sau 3 giây (fade-out)
        setTimeout(() => {
            const success = document.getElementById("success-alert");
            if (success) {
                success.style.opacity = "0";
                setTimeout(() => success.remove(), 500); // xóa hẳn khỏi DOM để không chừa khoảng trắng
            }

            const error = document.getElementById("error-alert");
            if (error) {
                error.style.opacity = "0";
                setTimeout(() => error.remove(), 500);
            }
        }, 3000);
    </script>
}

@page "{id:int}"
@model EVDManagement.Pages.Customers.DeleteModel
@{
    ViewData["Title"] = "Xóa khách hàng";
}

<h2 class="mt-3 mb-4 text-danger fw-bold">Xác nhận xóa khách hàng</h2>

<div class="alert alert-warning shadow-sm border-start border-4 border-warning">
    <i class="fa fa-exclamation-triangle me-2"></i>
    Bạn có chắc muốn xóa khách hàng <strong>@Model.CustomerName</strong> không?
</div>

<form method="post">
    <input type="hidden" asp-for="CustomerId" />

    <div class="text-end">
        <a asp-page="Index" class="btn btn-secondary me-2">
            <i class="fa fa-arrow-left"></i> Hủy
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="fa fa-trash"></i> Xóa
        </button>
    </div>
</form>

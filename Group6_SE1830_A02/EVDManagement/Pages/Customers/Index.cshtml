@page
@model EVDManagement.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Danh sách khách hàng";
}

<h2 class="mt-3 mb-4 text-primary fw-bold">Danh sách khách hàng</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div id="success-alert"
         class="alert alert-success py-2 px-3 mb-3 shadow-sm border-start border-4 border-success fade show">
        <i class="fa fa-check-circle me-2"></i>@TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div id="error-alert"
         class="alert alert-danger py-2 px-3 mb-3 shadow-sm border-start border-4 border-danger fade show">
        <i class="fa fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
    </div>
}

<!-- 🔍 Thanh tìm kiếm và nút thêm -->
<div class="row mb-3">
    <div class="col-md-8 col-lg-9 d-flex align-items-center">
        <input type="text" id="searchInput" class="form-control me-2"
               placeholder="Nhập thông tin cần tìm (tên, số điện thoại, email, CCCD, ...)" />
    </div>

    <div class="col-md-4 col-lg-3 text-end mt-2 mt-md-0">
        <a asp-page="Create" class="btn btn-success">
            <i class="fa fa-plus me-1"></i> Thêm khách hàng
        </a>
    </div>
</div>

<table id="customerTable" class="table table-striped table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Họ và tên</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>CCCD</th>
            <th>Ngày sinh</th>
            <th>Địa chỉ</th>
            <th>Ghi chú</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Customers != null && Model.Customers.Any())
        {
            foreach (var c in Model.Customers)
            {
                <tr>
                    <td>@c.FullName</td>
                    <td>@c.Phone</td>
                    <td>@c.Email</td>
                    <td>@c.Idnumber</td>
                    <td>@c.Dob?.ToString("dd/MM/yyyy")</td>
                    <td>@c.Address</td>
                    <td>@c.Note</td>
                    <td class="text-center">
                        <a asp-page="Edit" asp-route-id="@c.CustomerId" class="btn btn-sm btn-outline-warning me-1">Sửa</a>
                        <a asp-page="Delete" asp-route-id="@c.CustomerId" class="btn btn-sm btn-outline-danger">Xóa</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">Không có dữ liệu khách hàng.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- Import thư viện SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <script>
        // ====================== TÌM KIẾM KHÁCH HÀNG ======================
        const searchInput = document.getElementById('searchInput');
        const table = document.getElementById('customerTable');
        const rows = table.getElementsByTagName('tr');

        searchInput.addEventListener('keyup', function () {
            const filter = searchInput.value.toLowerCase().trim();

            for (let i = 1; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName('td');
                let rowText = '';
                for (let cell of cells) {
                    rowText += cell.textContent.toLowerCase() + ' ';
                }

                rows[i].style.display = rowText.includes(filter) ? '' : 'none';
            }
        });

        // ====================== TỰ ẨN THÔNG BÁO SAU 3 GIÂY ======================
        setTimeout(() => {
            const alerts = document.querySelectorAll('#success-alert, #error-alert');
            alerts.forEach(alert => {
                alert.style.transition = "opacity 0.5s";
                alert.style.opacity = "0";
                setTimeout(() => alert.remove(), 500);
            });
        }, 3000);

        // ====================== SIGNALR ======================
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/customerHub")
            .build();

        // Khi có khách hàng mới
        connection.on("CustomerAdded", function (customer) {
            showNotification(`Khách hàng <b>${customer.fullName}</b> vừa được thêm mới.`, "info");
            loadCustomers();
        });

        // Khi có khách hàng được cập nhật
        connection.on("CustomerUpdated", function (customer) {
            showNotification(`Khách hàng <b>${customer.fullName}</b> vừa được cập nhật.`, "warning");
            loadCustomers();
        });

        // Khi có khách hàng bị xóa
        connection.on("CustomerDeleted", function (customer) {
            showNotification(`Khách hàng <b>${customer.fullName}</b> đã bị xóa.`, "danger");
            loadCustomers(); // gọi lại hàm load danh sách
        });

        // Hàm hiển thị thông báo
        function showNotification(message, type) {
            const container = document.getElementById("notification-container");
            if (!container) return; // nếu layout chưa có container thì bỏ qua

            const alertDiv = document.createElement("div");
            alertDiv.className = `alert alert-${type} py-2 px-3 mb-3 shadow-sm border-start border-4 border-${type} fade show`;
            alertDiv.innerHTML = `<i class="fa fa-bell me-2"></i>${message}`;

            container.prepend(alertDiv); // 🧩 chèn vào đầu vùng notification

            setTimeout(() => {
                alertDiv.style.transition = "opacity 0.5s";
                alertDiv.style.opacity = "0";
                setTimeout(() => alertDiv.remove(), 500);
            }, 3000);
        }


        // Hàm tải lại danh sách khách hàng
        async function loadCustomers() {
            try {
                const res = await fetch('?handler=Customers');
                if (!res.ok) throw new Error('Không thể tải dữ liệu khách hàng');
                const customers = await res.json();

                const tbody = document.querySelector("#customerTable tbody");
                tbody.innerHTML = "";

                customers.forEach(c => {
                    const row = document.createElement("tr");
                    row.innerHTML = `
                        <td>${c.fullName}</td>
                        <td>${c.phone ?? ""}</td>
                        <td>${c.email ?? ""}</td>
                        <td>${c.idnumber ?? ""}</td>
                        <td>${c.dob ? new Date(c.dob).toLocaleDateString('vi-VN') : ""}</td>
                        <td>${c.address ?? ""}</td>
                        <td>${c.note ?? ""}</td>
                        <td class="text-center">
                            <a href="/Customers/Edit?id=${c.customerId}" class="btn btn-sm btn-outline-warning me-1">Sửa</a>
                            <a href="/Customers/Delete?id=${c.customerId}" class="btn btn-sm btn-outline-danger">Xóa</a>
                        </td>`;
                    tbody.appendChild(row);
                });
            } catch (err) {
                console.error(err);
            }
        }

        // Khởi động kết nối
        connection.start()
            .then(() => console.log("✅ Kết nối SignalR thành công"))
            .catch(err => console.error("❌ SignalR error:", err));
    </script>
}


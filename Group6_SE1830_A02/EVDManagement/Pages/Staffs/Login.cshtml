@page
@model EVDManagement.Pages.Staffs.LoginModel
@{
    Layout = null;  
    ViewData["Title"] = "Đăng nhập nhân viên";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            background: linear-gradient(135deg, #1e293b, #334155);
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-card {
            background: #fff;
            color: #1e293b;
            border-radius: 12px;
            padding: 30px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
        }

            .login-card h3 {
                text-align: center;
                margin-bottom: 25px;
                color: #0f172a;
            }

        .form-control:focus {
            border-color: #38bdf8;
            box-shadow: 0 0 5px rgba(56, 189, 248, 0.5);
        }

        .btn-login {
            background-color: #0ea5e9;
            border: none;
        }

            .btn-login:hover {
                background-color: #0284c7;
            }

        .alert {
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h3><i class="fa-solid fa-bolt me-2 text-primary"></i>Đăng nhập nhân viên</h3>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="LoginDto.Email" class="form-control" placeholder="Nhập email" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <input asp-for="LoginDto.Password" type="password" class="form-control" placeholder="Nhập mật khẩu" required />
            </div>

            <button type="submit" class="btn btn-login w-100 text-white fw-bold">
                <i class="fa-solid fa-right-to-bracket me-1"></i> Đăng nhập
            </button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
